<div class="message">
  <p class="message__user">
    <%= message.user %>
  </p>
  <div>
    <%= message.text %>
  </div>
  <div class="message__added">
    <%= message.added.toLocaleDateString(undefined, {  year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
  </div>
</div>